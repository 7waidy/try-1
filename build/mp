```components/ComicEffect.tsx
import React from 'react'
import { motion } from 'framer-motion'
interface ComicEffectProps {
  text: string
  color: 'red' | 'yellow' | 'blue'
  show: boolean
}
export function ComicEffect({ text, color, show }: ComicEffectProps) {
  const colorClasses = {
    red: 'text-red-500 border-red-600',
    yellow: 'text-yellow-400 border-yellow-500',
    blue: 'text-blue-500 border-blue-600',
  }
  if (!show) return null
  return (
    <motion.div
      initial={{
        scale: 0,
        rotate: -15,
        opacity: 0,
      }}
      animate={{
        scale: 1,
        rotate: 0,
        opacity: 1,
      }}
      transition={{
        type: 'spring',
        stiffness: 300,
        damping: 15,
        duration: 0.5,
      }}
      className="absolute -top-6 -right-6 z-10"
    >
      <div
        className={`starburst ${colorClasses[color]} w-24 h-24 flex items-center justify-center`}
      >
        <span
          className="font-['Bangers'] text-3xl font-bold text-white drop-shadow-[0_2px_4px_rgba(0,0,0,0.8)] relative z-10"
          style={{
            WebkitTextStroke: '2px black',
            paintOrder: 'stroke fill',
          }}
        >
          {text}
        </span>
      </div>
    </motion.div>
  )
}

```
```components/ComicPanel.tsx
import React, { useState } from 'react'
import { motion } from 'framer-motion'
import { ComicEffect } from './ComicEffect'
interface ComicPanelProps {
  title: string
  teaserText: string
  revealText: string
  backgroundColor: string
  effect: {
    text: string
    color: 'red' | 'yellow' | 'blue'
  }
  delay?: number
}
export function ComicPanel({
  title,
  teaserText,
  revealText,
  backgroundColor,
  effect,
  delay = 0,
}: ComicPanelProps) {
  const [isRevealed, setIsRevealed] = useState(false)
  return (
    <motion.div
      initial={{
        opacity: 0,
        y: 50,
        rotate: -2,
      }}
      animate={{
        opacity: 1,
        y: 0,
        rotate: 0,
      }}
      transition={{
        delay,
        type: 'spring',
        stiffness: 100,
        damping: 15,
      }}
      className="relative"
    >
      <motion.button
        onClick={() => setIsRevealed(!isRevealed)}
        whileHover={{
          scale: 1.02,
        }}
        whileTap={{
          scale: 0.98,
        }}
        className={`comic-border ${backgroundColor} p-6 w-full h-full min-h-[280px] cursor-pointer relative overflow-hidden transition-all`}
      >
        <ComicEffect
          text={effect.text}
          color={effect.color}
          show={isRevealed}
        />

        {/* Title banner */}
        <div className="absolute top-0 left-0 right-0 bg-black text-yellow-300 py-2 px-4 border-b-4 border-white">
          <h2 className="font-['Bangers'] text-2xl text-center tracking-wider">
            {title}
          </h2>
        </div>

        {/* Content area */}
        <div className="mt-12 flex flex-col items-center justify-center text-center space-y-4">
          <motion.div
            initial={false}
            animate={{
              opacity: isRevealed ? 0 : 1,
              scale: isRevealed ? 0.8 : 1,
            }}
            transition={{
              duration: 0.3,
            }}
            className="absolute inset-0 flex items-center justify-center p-8"
          >
            <p className="font-['Bungee'] text-xl leading-relaxed">
              {teaserText}
            </p>
          </motion.div>

          <motion.div
            initial={false}
            animate={{
              opacity: isRevealed ? 1 : 0,
              scale: isRevealed ? 1 : 0.8,
            }}
            transition={{
              duration: 0.3,
              delay: 0.1,
            }}
            className="absolute inset-0 flex items-center justify-center p-8"
          >
            <div className="space-y-4">
              <p className="font-bold text-lg leading-relaxed">{revealText}</p>
              <div className="inline-block bg-white px-4 py-2 rotate-2 border-4 border-black">
                <p className="font-['Bangers'] text-sm">
                  {isRevealed ? 'CLICK AGAIN!' : ''}
                </p>
              </div>
            </div>
          </motion.div>
        </div>

        {/* Halftone overlay */}
        <div className="absolute inset-0 halftone-pattern opacity-20 pointer-events-none" />
      </motion.button>
    </motion.div>
  )
}

```
```components/Stamp.tsx
import React from 'react'
interface StampProps {
  text: string
  rotation?: number
  color?: 'red' | 'black' | 'blue'
  size?: 'sm' | 'md' | 'lg'
}
export function Stamp({
  text,
  rotation = 0,
  color = 'red',
  size = 'md',
}: StampProps) {
  const colorClasses = {
    red: 'border-red-600 text-red-600',
    black: 'border-black text-black',
    blue: 'border-blue-600 text-blue-600',
  }
  const sizeClasses = {
    sm: 'text-xs px-2 py-1 border-2',
    md: 'text-sm px-3 py-1.5 border-[3px]',
    lg: 'text-base px-4 py-2 border-4',
  }
  return (
    <div
      className={`inline-block ${colorClasses[color]} ${sizeClasses[size]} font-bold tracking-widest uppercase opacity-60`}
      style={{
        transform: `rotate(${rotation}deg)`,
        fontFamily: 'Courier Prime, monospace',
      }}
    >
      {text}
    </div>
  )
}

```
```components/EvidencePhoto.tsx
import React, { useState } from 'react'
import { motion } from 'framer-motion'
interface EvidencePhotoProps {
  label: string
  note?: string
  rotation?: number
}
export function EvidencePhoto({
  label,
  note,
  rotation = 0,
}: EvidencePhotoProps) {
  const [isFlipped, setIsFlipped] = useState(false)
  return (
    <motion.div
      className="cursor-pointer"
      style={{
        rotate: rotation,
      }}
      whileHover={{
        scale: 1.05,
      }}
      onClick={() => setIsFlipped(!isFlipped)}
    >
      <motion.div
        className="relative"
        animate={{
          rotateY: isFlipped ? 180 : 0,
        }}
        transition={{
          duration: 0.6,
        }}
        style={{
          transformStyle: 'preserve-3d',
        }}
      >
        {/* Front of polaroid */}
        <div
          className="bg-white p-3 shadow-lg"
          style={{
            backfaceVisibility: 'hidden',
            width: '200px',
          }}
        >
          <div className="bg-gray-300 aspect-square mb-3 flex items-center justify-center">
            <span className="text-gray-500 text-sm typewriter-text">
              [PHOTO]
            </span>
          </div>
          <p className="text-center text-xs handwritten-text text-gray-700">
            {label}
          </p>
        </div>

        {/* Back of polaroid */}
        {note && (
          <div
            className="absolute inset-0 bg-white p-4 shadow-lg flex items-center justify-center"
            style={{
              backfaceVisibility: 'hidden',
              transform: 'rotateY(180deg)',
            }}
          >
            <p className="handwritten-text text-sm text-gray-800 text-center">
              {note}
            </p>
          </div>
        )}
      </motion.div>
    </motion.div>
  )
}

```
```components/DetectiveNote.tsx
import React from 'react'
interface DetectiveNoteProps {
  children: React.ReactNode
  pinned?: boolean
}
export function DetectiveNote({
  children,
  pinned = false,
}: DetectiveNoteProps) {
  return (
    <div className="relative">
      {pinned && (
        <div className="absolute -top-2 left-1/2 -translate-x-1/2 w-4 h-4 bg-red-600 rounded-full shadow-md z-10" />
      )}
      <div className="bg-yellow-100 p-4 shadow-md border-l-4 border-yellow-400">
        <div className="handwritten-text text-sm text-gray-800">{children}</div>
      </div>
    </div>
  )
}

