```components/WhyILoveYouCase.tsx
import React from 'react'
import { motion } from 'framer-motion'
import { DetectiveNote } from './DetectiveNote'
import { Stamp } from './Stamp'
interface WhyILoveYouCaseProps {
  onNext: () => void
  onPrev: () => void
}
export function WhyILoveYouCase({ onNext, onPrev }: WhyILoveYouCaseProps) {
  const reasons = [
    {
      id: 1,
      text: 'Your smile lights up every room',
      x: 20,
      y: 15,
    },
    {
      id: 2,
      text: 'The way you laugh at my jokes',
      x: 60,
      y: 25,
    },
    {
      id: 3,
      text: 'Your kindness to everyone',
      x: 15,
      y: 45,
    },
    {
      id: 4,
      text: 'How you make me feel safe',
      x: 70,
      y: 50,
    },
    {
      id: 5,
      text: 'Your incredible strength',
      x: 35,
      y: 70,
    },
    {
      id: 6,
      text: 'The way you understand me',
      x: 65,
      y: 75,
    },
  ]
  return (
    <motion.div
      initial={{
        opacity: 0,
        x: 100,
      }}
      animate={{
        opacity: 1,
        x: 0,
      }}
      exit={{
        opacity: 0,
        x: -100,
      }}
      className="min-h-screen w-full p-8 paper-texture"
    >
      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <div className="mb-8 relative">
          <div className="absolute top-0 right-0">
            <Stamp text="EVIDENCE #005" rotation={-6} color="red" />
          </div>
          <h1 className="typewriter-text text-4xl font-bold mb-2">
            WHY I LOVE YOU
          </h1>
          <div className="h-1 w-32 bg-black mb-4" />
          <p className="typewriter-text text-sm text-gray-700">
            Investigation Type: COMPREHENSIVE ANALYSIS
            <br />
            Evidence Count: INFINITE
            <br />
            Conclusion: UNDENIABLE
          </p>
        </div>

        {/* Evidence board with red strings */}
        <div className="bg-gray-900 p-12 mb-8 relative min-h-[600px]">
          <div className="absolute top-6 left-6">
            <Stamp text="EVIDENCE BOARD" rotation={-8} color="red" />
          </div>

          <div className="absolute top-6 right-6">
            <Stamp text="CONFIDENTIAL" rotation={8} color="red" />
          </div>

          {/* Center conclusion */}
          <motion.div
            initial={{
              scale: 0,
            }}
            animate={{
              scale: 1,
            }}
            transition={{
              delay: 0.5,
              type: 'spring',
            }}
            className="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-20"
          >
            <div className="bg-red-600 text-white p-8 shadow-2xl border-4 border-white transform rotate-2">
              <p className="typewriter-text text-3xl font-bold text-center">
                YOU
              </p>
              <p className="typewriter-text text-xl text-center mt-2">
                The Answer to Everything
              </p>
            </div>
          </motion.div>

          {/* Red strings connecting to center */}
          {reasons.map((reason, index) => (
            <motion.div
              key={reason.id}
              initial={{
                opacity: 0,
              }}
              animate={{
                opacity: 1,
              }}
              transition={{
                delay: 0.8 + index * 0.2,
              }}
            >
              {/* Evidence card */}
              <div
                className="absolute bg-yellow-100 p-4 shadow-lg border-2 border-yellow-600 w-48"
                style={{
                  left: `${reason.x}%`,
                  top: `${reason.y}%`,
                  transform: `rotate(${Math.random() * 10 - 5}deg)`,
                }}
              >
                <p className="handwritten-text text-sm text-gray-800">
                  {reason.text}
                </p>
                <div className="w-3 h-3 bg-red-600 rounded-full absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2" />
              </div>

              {/* Red string to center */}
              <svg
                className="absolute inset-0 pointer-events-none"
                style={{
                  width: '100%',
                  height: '100%',
                }}
              >
                <line
                  x1={`${reason.x + 10}%`}
                  y1={`${reason.y + 5}%`}
                  x2="50%"
                  y2="50%"
                  stroke="#DC2626"
                  strokeWidth="2"
                  strokeDasharray="5,5"
                />
              </svg>
            </motion.div>
          ))}
        </div>

        {/* Detailed reasons */}
        <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <DetectiveNote pinned>
            <p className="mb-2">
              <strong>REASON #1: YOUR PERSONALITY</strong>
            </p>
            <p>
              [Describe what you love about her personality - her humor,
              intelligence, kindness, etc.]
            </p>
          </DetectiveNote>

          <DetectiveNote pinned>
            <p className="mb-2">
              <strong>REASON #2: HOW YOU MAKE ME FEEL</strong>
            </p>
            <p>
              [Describe how she makes you feel - safe, happy, understood, loved,
              etc.]
            </p>
          </DetectiveNote>

          <DetectiveNote pinned>
            <p className="mb-2">
              <strong>REASON #3: YOUR STRENGTH</strong>
            </p>
            <p>
              [Describe what you admire about her strength, resilience, or
              courage]
            </p>
          </DetectiveNote>

          <DetectiveNote pinned>
            <p className="mb-2">
              <strong>REASON #4: THE LITTLE THINGS</strong>
            </p>
            <p>
              [Describe the small things she does that mean everything to you]
            </p>
          </DetectiveNote>
        </div>

        {/* Final analysis */}
        <div className="bg-white border-4 border-black p-8 mb-8 relative">
          <div className="absolute -top-4 left-1/2 -translate-x-1/2">
            <Stamp text="FINAL ANALYSIS" rotation={0} color="black" size="lg" />
          </div>
          <div className="mt-4">
            <h3 className="typewriter-text font-bold text-2xl mb-6 text-center">
              DETECTIVE'S CONCLUSION
            </h3>
            <div className="handwritten-text text-lg leading-relaxed text-gray-800 space-y-4">
              <p>
                After extensive investigation and careful analysis of all
                available evidence, this detective has reached an irrefutable
                conclusion:
              </p>
              <p className="text-xl font-bold text-center my-6 text-red-600">
                You are absolutely, undeniably, completely perfect for me.
              </p>
              <p>
                Every piece of evidence points to the same truth: I love you
                more than words can express. You make every day brighter, every
                challenge easier, and every moment better.
              </p>
              <p>
                This case will remain permanently open, as I plan to spend the
                rest of my life collecting more evidence of how amazing you are.
              </p>
            </div>
          </div>
        </div>

        {/* Navigation */}
        <div className="flex justify-between">
          <motion.button
            onClick={onPrev}
            className="bg-gray-700 text-white px-6 py-3 typewriter-text hover:bg-gray-600 transition-colors"
            whileHover={{
              scale: 1.05,
            }}
            whileTap={{
              scale: 0.95,
            }}
          >
            ‚Üê BACK
          </motion.button>
          <motion.button
            onClick={onNext}
            className="bg-black text-white px-6 py-3 typewriter-text hover:bg-gray-800 transition-colors"
            whileHover={{
              scale: 1.05,
            }}
            whileTap={{
              scale: 0.95,
            }}
          >
            FINAL EVIDENCE ‚Üí
          </motion.button>
        </div>
      </div>
    </motion.div>
  )
}

