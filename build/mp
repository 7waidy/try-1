```components/SpeechBubble.tsx
import React from 'react'
import { motion } from 'framer-motion'
interface SpeechBubbleProps {
  children: React.ReactNode
  position?:
    | 'top-left'
    | 'top-right'
    | 'bottom-left'
    | 'bottom-right'
    | 'center'
  delay?: number
  tailDirection?: 'left' | 'right' | 'bottom'
}
export function SpeechBubble({
  children,
  position = 'top-left',
  delay = 0,
  tailDirection = 'bottom',
}: SpeechBubbleProps) {
  const positionClasses = {
    'top-left': 'top-8 left-8',
    'top-right': 'top-8 right-8',
    'bottom-left': 'bottom-8 left-8',
    'bottom-right': 'bottom-8 right-8',
    center: 'top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2',
  }
  const tailStyles = {
    left: {
      left: '-20px',
      top: '50%',
      transform: 'translateY(-50%) rotate(-90deg)',
    },
    right: {
      right: '-20px',
      top: '50%',
      transform: 'translateY(-50%) rotate(90deg)',
    },
    bottom: {
      bottom: '-20px',
      left: '30px',
      transform: 'none',
    },
  }
  return (
    <motion.div
      initial={{
        scale: 0,
        opacity: 0,
      }}
      animate={{
        scale: 1,
        opacity: 1,
      }}
      transition={{
        delay,
        type: 'spring',
        stiffness: 200,
        damping: 15,
      }}
      className={`absolute ${positionClasses[position]} z-20`}
    >
      <div className="relative bg-white border-4 border-black rounded-2xl px-6 py-4 shadow-lg max-w-xs">
        <div className="comic-font text-lg leading-tight text-black">
          {children}
        </div>
        {/* Speech bubble tail */}
        <div
          className="absolute w-0 h-0"
          style={{
            ...tailStyles[tailDirection],
            borderLeft: '15px solid transparent',
            borderRight: '15px solid transparent',
            borderTop: '20px solid white',
            filter: 'drop-shadow(2px 2px 0px black)',
          }}
        />
      </div>
    </motion.div>
  )
}

```
```components/ThoughtBubble.tsx
import React from 'react'
import { motion } from 'framer-motion'
interface ThoughtBubbleProps {
  children: React.ReactNode
  position?:
    | 'top-left'
    | 'top-right'
    | 'bottom-left'
    | 'bottom-right'
    | 'center'
  delay?: number
}
export function ThoughtBubble({
  children,
  position = 'top-right',
  delay = 0,
}: ThoughtBubbleProps) {
  const positionClasses = {
    'top-left': 'top-8 left-8',
    'top-right': 'top-8 right-8',
    'bottom-left': 'bottom-8 left-8',
    'bottom-right': 'bottom-8 right-8',
    center: 'top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2',
  }
  return (
    <motion.div
      initial={{
        scale: 0,
        opacity: 0,
      }}
      animate={{
        scale: 1,
        opacity: 1,
      }}
      transition={{
        delay,
        type: 'spring',
        stiffness: 200,
        damping: 15,
      }}
      className={`absolute ${positionClasses[position]} z-20`}
    >
      <div className="relative">
        {/* Main thought bubble - cloud shape */}
        <div
          className="bg-white border-4 border-black px-6 py-4 shadow-lg max-w-xs"
          style={{
            borderRadius: '60% 40% 40% 60% / 60% 40% 60% 40%',
          }}
        >
          <div className="comic-font text-lg leading-tight text-black italic">
            {children}
          </div>
        </div>

        {/* Small thought circles */}
        <div className="absolute -bottom-8 left-6">
          <div className="w-4 h-4 bg-white border-2 border-black rounded-full" />
        </div>
        <div className="absolute -bottom-12 left-3">
          <div className="w-2.5 h-2.5 bg-white border-2 border-black rounded-full" />
        </div>
      </div>
    </motion.div>
  )
}

