```components/FirstDateCase.tsx
import React, { memo } from 'react'
import { motion } from 'framer-motion'
import { EvidencePhoto } from './EvidencePhoto'
import { DetectiveNote } from './DetectiveNote'
import { Stamp } from './Stamp'
interface FirstDateCaseProps {
  onNext: () => void
  onPrev: () => void
}
export function FirstDateCase({ onNext, onPrev }: FirstDateCaseProps) {
  return (
    <motion.div
      initial={{
        opacity: 0,
        x: 100,
      }}
      animate={{
        opacity: 1,
        x: 0,
      }}
      exit={{
        opacity: 0,
        x: -100,
      }}
      className="min-h-screen w-full p-8 paper-texture"
    >
      <div className="max-w-5xl mx-auto">
        {/* Header */}
        <div className="mb-8 relative">
          <div className="absolute top-0 right-0">
