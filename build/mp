```components/pages/Page12Final.tsx
import React from 'react'
import { motion } from 'framer-motion'
import { SoundEffect } from '../SoundEffect'
import { Cake, PartyPopper, Heart, Sparkles } from 'lucide-react'
interface Page12FinalProps {
  girlfriendName?: string
}
export function Page12Final({
  girlfriendName = '[Fadma]',
}: Page12FinalProps) {
  return (
    <div className="w-full h-screen bg-gradient-to-br from-yellow-400 via-pink-500 to-purple-600 relative overflow-hidden">
      {/* Animated background sparkles */}
      <div className="absolute inset-0">
        {[...Array(30)].map((_, i) => (
          <motion.div
            key={i}
            className="absolute"
            initial={{
              x: Math.random() * window.innerWidth,
              y: Math.random() * window.innerHeight,
              scale: 0,
            }}
            animate={{
              scale: [0, 1, 0],
              rotate: 360,
            }}
            transition={{
              duration: 2 + Math.random() * 2,
              repeat: Infinity,
              delay: Math.random() * 3,
            }}
          >
            <Sparkles className="text-white" size={20 + Math.random() * 20} />
          </motion.div>
        ))}
      </div>

      {/* Halftone overlay */}
      <div className="absolute inset-0 halftone-pattern opacity-10" />

      {/* Sound effects */}
      <SoundEffect
        text="HAPPY!"
        color="yellow"
        position="top-left"
        delay={0.5}
        size="lg"
        rotation={-15}
      />
      <SoundEffect
        text="BIRTHDAY!"
        color="red"
        position="top-right"
        delay={0.7}
        size="lg"
        rotation={15}
      />

      {/* Main content */}
      <div className="relative z-10 h-full flex flex-col items-center justify-center px-8">
        {/* Birthday cake icon */}
        <motion.div
          initial={{
            scale: 0,
            rotate: -180,
          }}
          animate={{
            scale: 1,
            rotate: 0,
          }}
          transition={{
            type: 'spring',
            stiffness: 150,
            damping: 15,
            delay: 0.3,
          }}
          className="mb-8"
        >
          <div className="comic-border bg-white p-8 rounded-full">
            <Cake className="w-24 h-24 text-pink-500" />
          </div>
        </motion.div>

        {/* Main birthday message */}
        <motion.div
          initial={{
            scale: 0,
          }}
          animate={{
            scale: 1,
          }}
          transition={{
            type: 'spring',
            stiffness: 150,
            damping: 20,
            delay: 0.6,
          }}
          className="text-center mb-8"
        >
          <h1 className="font-['Bangers'] text-7xl md:text-9xl text-white text-stroke-black mb-4 leading-none">
            HAPPY
          </h1>
          <h1 className="font-['Bangers'] text-7xl md:text-9xl text-white text-stroke-black leading-none">
            BIRTHDAY!
          </h1>
        </motion.div>

        {/* Name banner */}
        <motion.div
          initial={{
            y: 100,
            opacity: 0,
          }}
          animate={{
            y: 0,
            opacity: 1,
          }}
          transition={{
            type: 'spring',
            stiffness: 100,
            damping: 15,
            delay: 1,
          }}
          className="mb-8"
        >
          <div className="comic-border bg-yellow-400 px-12 py-6 transform -rotate-1">
            <h2 className="font-['Bangers'] text-5xl md:text-6xl text-black tracking-wide">
              {girlfriendName}
            </h2>
          </div>
        </motion.div>

        {/* Birthday message */}
        <motion.div
          initial={{
            y: 50,
            opacity: 0,
          }}
          animate={{
            y: 0,
            opacity: 1,
          }}
          transition={{
            delay: 1.3,
          }}
          className="comic-border bg-white px-8 py-6 max-w-2xl mb-8"
        >
          <p className="font-['Permanent_Marker'] text-xl md:text-2xl text-center leading-relaxed text-gray-800">
            You're my hero, my partner in crime, and my favorite person in the
            whole world. Here's to another year of adventures, laughter, and
            love!
          </p>
        </motion.div>

        {/* Signature */}
        <motion.div
          initial={{
            opacity: 0,
          }}
          animate={{
            opacity: 1,
          }}
          transition={{
            delay: 1.6,
          }}
          className="text-center"
        >
          <p className="font-['Permanent_Marker'] text-2xl text-white text-stroke-black mb-2">
            With all my love,
          </p>
          <p className="font-['Bangers'] text-3xl text-white text-stroke-black">
            Your Dark Knight ü¶á‚ù§Ô∏è
          </p>
        </motion.div>

        {/* Fireworks effect */}
        {[...Array(8)].map((_, i) => (
          <motion.div
            key={i}
            initial={{
              scale: 0,
              opacity: 0,
            }}
            animate={{
              scale: [0, 2, 0],
              opacity: [0, 1, 0],
            }}
            transition={{
              delay: 2 + i * 0.2,
              duration: 1.5,
              repeat: Infinity,
              repeatDelay: 3,
            }}
            className="absolute text-6xl"
            style={{
              left: `${15 + i * 12}%`,
              top: `${20 + (i % 2) * 30}%`,
            }}
          >
            üéÜ
          </motion.div>
        ))}

        {/* Party poppers */}
        <motion.div
          animate={{
            rotate: [0, -10, 10, 0],
          }}
          transition={{
            duration: 0.5,
            repeat: Infinity,
            repeatDelay: 2,
          }}
          className="absolute bottom-8 left-8"
        >
          <PartyPopper className="w-16 h-16 text-yellow-300" />
        </motion.div>
        <motion.div
          animate={{
            rotate: [0, 10, -10, 0],
          }}
          transition={{
            duration: 0.5,
            repeat: Infinity,
            repeatDelay: 2,
            delay: 0.3,
          }}
          className="absolute bottom-8 right-8"
        >
          <PartyPopper className="w-16 h-16 text-pink-300" />
        </motion.div>

        {/* Restart hint */}
        <motion.div
          initial={{
            opacity: 0,
          }}
          animate={{
            opacity: 1,
          }}
          transition={{
            delay: 3,
          }}
          className="absolute bottom-4 left-1/2 -translate-x-1/2"
        >
          <p className="font-['Bangers'] text-lg text-white text-stroke-black">
            Click to restart the adventure!
          </p>
        </motion.div>
      </div>

      {/* THE END banner */}
      <motion.div
        initial={{
          scale: 0,
          rotate: -180,
        }}
        animate={{
          scale: 1,
          rotate: 0,
        }}
        transition={{
          delay: 2.5,
          type: 'spring',
        }}
        className="absolute top-8 right-8 comic-border bg-black text-yellow-300 px-6 py-3"
      >
        <p className="font-['Bangers'] text-2xl">THE END... FOR NOW! üíï</p>
      </motion.div>
    </div>
  )
}

