        <h2 className="font-['Bangers'] text-3xl md:text-4xl text-center tracking-wider">
          CHAPTER 5: THE BIG REVEAL
        </h2>
      </motion.div>

      {/* Main panel */}
      <div className="h-full flex items-center justify-center p-8 pt-24">
        <motion.div
          initial={{
            scale: 0.8,
            opacity: 0,
          }}
          animate={{
            scale: 1,
            opacity: 1,
          }}
          transition={{
            delay: 0.3,
            type: 'spring',
          }}
          className="comic-panel bg-gradient-to-br from-red-100 to-pink-200 w-full max-w-4xl h-[70vh] relative overflow-hidden"
        >
          {/* Romantic background effect */}
          <div className="absolute inset-0 flex items-center justify-center">
            {[...Array(20)].map((_, i) => (
              <motion.div
                key={i}
                initial={{
                  scale: 0,
                  opacity: 0,
                }}
                animate={{
                  scale: [0, 1.5, 0],
                  opacity: [0, 1, 0],
                }}
                transition={{
                  delay: 1 + i * 0.1,
                  duration: 2,
                  repeat: Infinity,
                  repeatDelay: 2,
                }}
                className="absolute text-6xl"
                style={{
                  left: `${Math.random() * 100}%`,
                  top: `${Math.random() * 100}%`,
                }}
              >
                ‚ú®
              </motion.div>
            ))}
          </div>

          {/* Scene illustration */}
          <div className="absolute inset-8 border-4 border-dashed border-gray-400 flex items-center justify-center bg-white/70 z-10">
            <div className="text-center">
              <div className="text-9xl mb-4">üíñ</div>
              <p className="font-['Bangers'] text-3xl text-gray-600">
                [Illustration: A romantic moment]
              </p>
              <p className="font-['Permanent_Marker'] text-xl text-gray-500 mt-2">
                The moment everything became clear...
              </p>
            </div>
          </div>

          {/* Thought bubble */}
          <ThoughtBubble position="top-left" delay={0.8}>
            This is it... she's the one...
          </ThoughtBubble>

          {/* Sound effects */}
          <SoundEffect
            text="LOVE!"
            color="red"
            position="top-right"
            delay={1.5}
            size="xl"
            rotation={-10}
          />

          {/* Caption box */}
          <motion.div
            initial={{
              y: 50,
              opacity: 0,
            }}
            animate={{
              y: 0,
              opacity: 1,
            }}
            transition={{
              delay: 2,
            }}
            className="absolute bottom-4 left-4 right-4 bg-red-600 border-4 border-black p-4 z-20"
          >
            <p className="font-['Permanent_Marker'] text-lg text-white leading-tight">
              <strong>NARRATOR:</strong> In that moment, our hero realized the
              truth he'd known all along - she wasn't just his partner in
              adventure... she was his everything.
            </p>
          </motion.div>
        </motion.div>
      </div>
    </div>
  )
}

