```components/CaseSolvedPage.tsx
import React, { useState } from 'react'
import { motion, AnimatePresence } from 'framer-motion'
import { Stamp } from './Stamp'
import { Cake, PartyPopper, Heart, Sparkles } from 'lucide-react'
interface CaseSolvedPageProps {
  onRestart: () => void
}
export function CaseSolvedPage({ onRestart }: CaseSolvedPageProps) {
  const [showBirthdayMessage, setShowBirthdayMessage] = useState(false)
  return (
    <motion.div
      initial={{
        opacity: 0,
      }}
      animate={{
        opacity: 1,
      }}
      className="min-h-screen w-full flex items-center justify-center p-8 noir-vignette relative overflow-hidden"
      style={{
        background: 'linear-gradient(to bottom, #1a1a1a 0%, #2d2d2d 100%)',
      }}
