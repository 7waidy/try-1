```components/SoundEffect.tsx
import React from 'react'
import { motion } from 'framer-motion'
interface SoundEffectProps {
  text: string
  color?: 'red' | 'yellow' | 'blue' | 'orange' | 'purple'
  position?:
    | 'top-left'
    | 'top-right'
    | 'bottom-left'
    | 'bottom-right'
    | 'center'
    | 'top-center'
  delay?: number
  size?: 'sm' | 'md' | 'lg' | 'xl'
  rotation?: number
}
export function SoundEffect({
  text,
  color = 'yellow',
  position = 'top-right',
  delay = 0,
  size = 'lg',
  rotation = 0,
}: SoundEffectProps) {
  const colorClasses = {
    red: 'text-red-600',
    yellow: 'text-yellow-400',
    blue: 'text-blue-600',
    orange: 'text-orange-500',
    purple: 'text-purple-600',
  }
  const sizeClasses = {
    sm: 'text-3xl w-20 h-20',
    md: 'text-4xl w-28 h-28',
    lg: 'text-5xl w-36 h-36',
    xl: 'text-7xl w-48 h-48',
  }
  const positionClasses = {
    'top-left': 'top-4 left-4',
    'top-right': 'top-4 right-4',
    'top-center': 'top-4 left-1/2 -translate-x-1/2',
    'bottom-left': 'bottom-4 left-4',
    'bottom-right': 'bottom-4 right-4',
    center: 'top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2',
  }
  return (
    <motion.div
      initial={{
        scale: 0,
        rotate: rotation - 20,
        opacity: 0,
      }}
      animate={{
        scale: 1,
        rotate: rotation,
        opacity: 1,
      }}
      transition={{
        delay,
        type: 'spring',
        stiffness: 300,
        damping: 15,
      }}
      className={`absolute ${positionClasses[position]} z-30`}
    >
      <div
        className={`starburst ${colorClasses[color]} ${sizeClasses[size]} flex items-center justify-center`}
      >
        <span className="font-['Bangers'] font-bold text-white drop-shadow-[0_3px_6px_rgba(0,0,0,0.9)] relative z-10 text-stroke-black">
          {text}
        </span>
      </div>
    </motion.div>
  )
}

